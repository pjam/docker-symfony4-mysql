#!/usr/bin/env bash

if [ "$1" == "build" ]; then
    docker-compose build ${@:2:99}
elif [ "$1" == "rebuild" ]; then
    docker-compose build --no-cache
elif [ "$1" == "start" ]; then
    docker-compose up -d ${@:2:99}
elif [ "$1" == "stop" ]; then
    docker-compose stop
elif [ "$1" == "clean" ]; then
    docker-compose down ${@:2:99}
else
    echo "Unknown docker/docker-compose command $1"
fi

